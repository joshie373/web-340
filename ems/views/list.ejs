<% include header %>
<% include navbar %>


<% if (employees.length) { %>
<div class="container">
    <h2>Employee Listing</h2><br />
    <a class="btn btn-primary" href="/new">Add New</a><br><br>

    <table class="table table-striped table-dark">
        <thead class="thead‐dark">
        <tr >
            <th>Employee Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <% employees.forEach(function (entry) { %>
        <tr>
            <td ><%= entry.employeeId %></td>
            <td ><%= entry.firstName %></td>
            <td ><%= entry.lastName %></td>
            <td ><a href="/view/<%= entry.employeeId %>"><i class="fa fa-eye fa-lg"> </i> VIEW</a> | <a href="/delete/<%= entry.employeeId %>"><i class="fa fa-trash-o fa-lg"> </i> DELETE</a></td>
            <td ></td>
        </tr>
        <% }) %>
    </tbody>
    </table>
    <% } else { %>
    No entries! <a class="btn btn-primary" href="/new">Add one!</a>
    <% } %>
</div>
<% include footer %>
<% include scripts %>